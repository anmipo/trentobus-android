<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="timetableStopName">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="timetableTime">
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="header">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textColor">#FF4444AA</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="scheduleValidityStatus">
        <item name="android:textColor">#FFCC0000</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:background">#FFFFFF80</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>